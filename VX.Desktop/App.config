<?xml version="1.0"?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
  </configSections>
  <log4net>
    <appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
      <file value="log.txt" />
      <appendToFile value="true" />
      <rollingStyle value="Size" />
      <maxSizeRollBackups value="10" />
      <maximumFileSize value="100KB" />
      <staticLogFileName value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger - %message%newline" />
      </layout>
    </appender>
    <root>
      <level value="INFO" />
      <appender-ref ref="RollingFileAppender" />
    </root>
  </log4net>
  <system.net>
    <defaultProxy enabled="true" useDefaultCredentials="true" />
  </system.net>
  <system.diagnostics>
    <sources>
      <source name="System.ServiceModel" switchValue="Information,ActivityTracing"
        propagateActivity="true">
        <listeners>
          <add name="xml" />
        </listeners>
      </source>
      <source name="System.ServiceModel.MessageLogging">
        <listeners>
          <add name="xml" />
        </listeners>
      </source>
    </sources>
    <sharedListeners>
      <add initializeData="TracingAndLogging-service.svclog" type="System.Diagnostics.XmlWriterTraceListener"
        name="xml" />
    </sharedListeners>
    <trace autoflush="true" />
  </system.diagnostics>
  <system.serviceModel>
    <diagnostics>
      <messageLogging logEntireMessage="true"
                      maxMessagesToLog="300"
                      logMessagesAtServiceLevel="true"
                      logMalformedMessages="true"
                      logMessagesAtTransportLevel="true" />
    </diagnostics>
    <bindings>
      <basicHttpBinding>
        <!--Authentication-->
        <binding name="BasicHttpBinding_IMembershipService" useDefaultWebProxy="true">
          <security mode="None">
            <transport clientCredentialType="None" proxyCredentialType="Windows" realm=""/>
          </security>
        </binding>
        <binding name="BasicHttpBinding_IVocabExtService" useDefaultWebProxy="true">          
          <security mode="None">
            <transport clientCredentialType="None" proxyCredentialType="Windows" realm=""/>
          </security>
        </binding>
      </basicHttpBinding>
    </bindings>
    <client>
      <endpoint address="http://vocabextenderservice.apphb.com/VocabExtService.svc/soapService" binding="basicHttpBinding" bindingConfiguration="BasicHttpBinding_IVocabExtService" contract="VocabExtService.IVocabExtService" name="BasicHttpBinding_IVocabExtService"/>
      <endpoint address="http://vocabextender.apphb.com/AccountMembershipService.svc/soapService" binding="basicHttpBinding" bindingConfiguration="BasicHttpBinding_IMembershipService" contract="AccountMembershipService.IMembershipService" name="BasicHttpBinding_IMembershipService"/>
      <!--<endpoint address="http://vocabextenderservicetest.apphb.com/VocabExtService.svc/soapService" binding="basicHttpBinding" bindingConfiguration="BasicHttpBinding_IVocabExtService" contract="VocabExtService.IVocabExtService" name="BasicHttpBinding_IVocabExtService"/>
      <endpoint address="http://vocabextendertest.apphb.com/AccountMembershipService.svc/soapService" binding="basicHttpBinding" bindingConfiguration="BasicHttpBinding_IMembershipService" contract="AccountMembershipService.IMembershipService" name="BasicHttpBinding_IMembershipService"/>-->
      <!--<endpoint address="http://localhost:17025/VocabExtService.svc/soapService" binding="basicHttpBinding" bindingConfiguration="BasicHttpBinding_IVocabExtService" contract="VocabExtService.IVocabExtService" name="BasicHttpBinding_IVocabExtService"/>
      <endpoint address="http://localhost:17026/AccountMembershipService.svc/soapService" binding="basicHttpBinding" bindingConfiguration="BasicHttpBinding_IMembershipService" contract="AccountMembershipService.IMembershipService" name="BasicHttpBinding_IMembershipService"/>-->
    </client>
    <serviceHostingEnvironment aspNetCompatibilityEnabled="true"/>
  </system.serviceModel>
  
  <appSettings>
    <add key="RegisterUrl" value="http://vocabextender.apphb.com/Account/Register"/>
    <add key="PopupIntervalMinutes" value="10"/>
  </appSettings>
</configuration>
