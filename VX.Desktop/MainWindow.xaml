<Window x:Class="VX.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="MainWindow" 
        xmlns:tb="http://www.hardcodet.net/taskbar" xmlns:Local="clr-namespace:VX.Desktop">
    <Grid>        
        <tb:TaskbarIcon 
            Name="taskbarIcon"
            IconSource="Icons/tray.ico">
            <tb:TaskbarIcon.TrayPopup>
                <Local:TranslationsPopup></Local:TranslationsPopup>
            </tb:TaskbarIcon.TrayPopup>
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Configure" Click="MenuConfigureClick">
                        <MenuItem.Icon>
                            <Image Source="Icons/settings.ico" Width="16" Height="16"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <Separator />
                    <MenuItem Header="Exit" Click="MenuExitClick">
                        <MenuItem.Icon>
                            <Image Source="Icons/exit.ico" Width="16" Height="16"/>
                        </MenuItem.Icon>
                    </MenuItem>
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>
    </Grid>
</Window>
